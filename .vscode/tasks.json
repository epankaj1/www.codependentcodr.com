{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rebuild/Generate site",
            "type": "shell",
            "command": "source ${config:pelican.activatePath} && make publish",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start Dev server",
            "type": "shell",
            "command": "source ${config:pelican.activatePath} && make devserver"
        },
        {
            "label": "Stop Dev server",
            "type": "shell",
            "command": "source ${config:pelican.activatePath} && make stopserver"
        },
        {
            "label": "Deploy to S3",
            "type": "shell",
            "command": "source ${config:pelican.activatePath} && source envs && make s3_upload"
        },
        {
            "label": "Open Site in Browser",
            "type": "shell",
            "command": "open https://www.codependentcodr.com"
        },
        {
            "label": "Open Site in Browser (via S3 URL)",
            "type": "shell",
            "command": "open http://www.codependentcodr.com.s3-website.ca-central-1.amazonaws.com/index.html"
        },
        {
            "label": "Open Site in Browser (via CF URL)",
            "type": "shell",
            "command": "open https://d1c3rffik0endi.cloudfront.net"
        },

    ]
}
